<h1>Contact us!</h1>

<%= form_tag(send_mail_path, method: "post") do %>
  <%= label_tag (:name)%>
  <%= text_field_tag (:name)%><br>

  <%= label_tag (:email)%>
  <%= text_field_tag (:email)%><br>

  <%= label_tag (:message)%>
  <%= text_area_tag (:message)%><br>

  <%= submit_tag("Send")%>
  <% end %>